<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Login | Skote - Nodejs Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      content="Premium Multipurpose Admin & Dashboard Template"
      name="description"
    />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="public/assets/images/favicon.png" />

    <%- include ('../Partials/HeaderStyle') %>
  </head>

  <body>
    <div class="account-pages my-1 pt-sm-4">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card overflow-hidden">
              <div class="bg-primary bg-soft">
                <div class="row">
                  <div class="col-7">
                    <div class="text-primary p-4">
                      <h5 class="text-primary mt-4">Hoşgeldiniz!</h5>
                      <p class="text-white">
                        Ai-Sens hesabınıza giriş yapabilirsiniz.
                      </p>
                    </div>
                  </div>
                  <div class="col-5 align-item-center">
                    <img
                      src="public/assets/images/logo-light.png"
                      alt=""
                      class="img-fluid"
                    />
                  </div>
                </div>
              </div>
              <div class="card-body pt-0">
                <div class="p-2">
                  <% if(errorMessage) { %>
                  <div
                    class="alert alert-danger text-center mb-4 flash"
                    role="alert"
                  >
                    <%= errorMessage %>
                  </div>
                  <% } %>
                  <form
                    class="form-horizontal"
                    method="post"
                    action="/post-login"
                  >
                    <div class="mb-3 mt-4">
                      <input
                        type="text"
                        class="form-control"
                        id="email"
                        name="email"
                        placeholder="E-posta"
                      />
                    </div>

                    <div class="mb-3">
                      <div class="input-group auth-pass-inputgroup">
                        <input
                          type="password"
                          class="form-control"
                          placeholder="Parola"
                          aria-label="Password"
                          aria-describedby="password-addon"
                          name="password"
                        />
                        <button
                          class="btn btn-light"
                          type="button"
                          id="password-addon"
                        >
                          <i class="mdi mdi-eye-outline"></i>
                        </button>
                      </div>
                    </div>

                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        id="remember-check"
                      />
                      <label
                        class="form-check-label text-muted"
                        for="remember-check"
                      >
                        Beni hatırla
                      </label>
                    </div>

                    <div class="mt-3 d-grid">
                      <button
                        class="btn btn-primary waves-effect waves-light"
                        type="submit"
                      >
                        Giriş
                      </button>
                    </div>

                    <div class="mt-4 text-center">
                      <a href="/forgot-password" class="text-muted"
                        ><i class="mdi mdi-lock me-1"></i>Şifremi unuttum!
                      </a>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <div class="mt-1 text-center">
              <div>
                <p>
                  Hesabınız yok mu?
                  <a href="/register" class="fw-medium text-primary">
                    Kullanıcı Oluştur
                  </a>
                </p>

                <p>© <%= new Date().getFullYear(); %> AiSens</p>
                <img
                  src="public/assets/images/expremus.png"
                  alt=""
                  width="80px"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- end account-pages -->

    <%- include ('../Partials/FooterScript') %>

    <!-- App js -->
    <script src="public/assets/js/app.js"></script>
  </body>
</html>
