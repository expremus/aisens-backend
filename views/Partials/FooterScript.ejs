<script>
  setInterval(function () {
    var id = JSON.parse($("#cihazId").text());
    $.get("http://localhost:3001/getState/:" + id, function (response1) {
      var state1 = document.getElementById("state1");
      var state2 = document.getElementById("state2");

      if (response1 === "true") {
        state2.classList.add("d-none");
        state1.classList.remove("d-none");
      }
    });
  }, 2000);
</script>
