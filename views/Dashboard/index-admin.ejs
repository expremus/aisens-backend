<%- contentFor('HeaderCss') %> <%- contentFor('breadcrumb') %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.1/moment.min.js"></script>
<script src="../../public/assets/js/dist/Chart.js"></script>
<script src="../../public/assets/js/scriptCharts.js"></script>

<div class="row">
  <div class="col-12">
    <div
      class="
        page-title-box
        d-sm-flex
        align-items-center
        justify-content-between
      "
    >
      <h4 class="mb-sm-0 font-size-18">CANLI TAKİP</h4>

      <div class="page-title-right">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item">
            <a href="javascript: void(0);">AiSens</a>
          </li>
          <li class="breadcrumb-item active">Canlı Takip</li>
        </ol>
      </div>
    </div>
  </div>

  <div class="col-6">
    <div class="page-title-box d-sm-flex align-items-center">
      <div class="page-title-left">
        <ol class="breadcrumb m-0">
          <div>
            <button
              type="button"
              class="btn btn-primary waves-effect waves-light"
              data-bs-toggle="modal"
              data-bs-target="#myModal1"
            >
              Cihaz Ekle
            </button>

            <!-- sample modal content -->
            <div
              id="myModal1"
              class="modal fade"
              tabindex="-1"
              aria-labelledby="myModalLabel1"
              aria-hidden="true"
            >
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title mt-0" id="myModalLabel1">
                      Cihaz Ekle
                    </h5>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <form action="/createCihaz" method="POST">
                    <div class="modal-body">
                      <div class="form-row mb-3">
                        <input
                          type="text"
                          class="form-control"
                          id="name"
                          name="name"
                          placeholder="Enter name"
                        />
                        <label for="name"
                          >Lütfen cihazın ismini giriniz...</label
                        >
                      </div>
                      <div class="form-row mb-3">
                        <div class="row d-flex align-items-center">
                          <div class="col">
                            <input
                              type="text"
                              class="form-control"
                              id="id1"
                              maxlength="2"
                              name="id1"
                            />
                          </div>
                          :
                          <div class="col">
                            <input
                              type="text"
                              class="form-control"
                              id="id2"
                              maxlength="2"
                              name="id2"
                            />
                          </div>
                          :
                          <div class="col">
                            <input
                              type="text"
                              class="form-control"
                              id="id3"
                              maxlength="2"
                              name="id3"
                            />
                          </div>
                          :
                          <div class="col">
                            <input
                              type="text"
                              class="form-control"
                              id="id4"
                              maxlength="2"
                              name="id4"
                            />
                          </div>
                          :
                          <div class="col">
                            <input
                              type="text"
                              class="form-control"
                              id="id5"
                              maxlength="2"
                              name="id5"
                            />
                          </div>
                          :
                          <div class="col">
                            <input
                              type="text"
                              class="form-control"
                              id="id6"
                              maxlength="2"
                              name="id6"
                            />
                          </div>
                          <label for="id1">Seri Numaranızı giriniz...</label>
                        </div>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button
                        type="button"
                        class="btn btn-secondary waves-effect"
                        data-bs-dismiss="modal"
                      >
                        Kapat
                      </button>
                      <button
                        type="submit"
                        class="btn btn-primary waves-effect waves-light"
                      >
                        Kaydet
                      </button>
                    </div>
                  </form>
                </div>
                <!-- /.modal-content -->
              </div>
              <!-- /.modal-dialog -->
            </div>
            <!-- /.modal -->
          </div>
          <!-- end preview-->
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xl-12">
    <div class="row">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title"></h4>
              <p class="card-title-desc"></p>

              <table
                id="datatable"
                class="table table-bordered dt-responsive nowrap w-100"
              >
                <thead>
                  <tr>
                    <th>Cihaz Adı</th>
                    <th>Seri Numarası</th>
                  </tr>
                </thead>

                <tbody>
                  <%if (cihaz.length > 0){ %> <% cihaz.forEach(function(row){ %>
                  <tr>
                    <td><%= user.name %></td>
                    <td><%= row.name %></td>
                    <td><%= row.id %></td>
                    <td>
                      <a href="/:<%= row.id %>" key="t-default"
                        >Cihazı Görüntüle</a
                      >
                    </td>
                    <td>
                      <form action="/delete/:<%= row.id %>" method="post">
                        <button
                          class="btn btn-sm"
                          style="background: #e20a17; color: antiquewhite"
                          type="submit"
                        >
                          Cihazı Sil
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% })}else{ %>
                  <tr>
                    <td colspan="6">Aktif Cihaz Bulunamadı...</td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <!-- end col -->
      </div>
    </div>

    <!-- end row -->

    <!-- end row -->

    <%- contentFor('FooterJs') %>

    <!-- apexcharts -->
    <script src="public/assets/libs/apexcharts/apexcharts.min.js"></script>

    <!-- dashboard init -->
    <script src="public/assets/js/pages/dashboard.init.js"></script>

    <!-- echarts js -->
    <script src="public/assets/libs/echarts/echarts.min.js"></script>
    <!-- echarts init -->
    <script src="public/assets/js/pages/echarts.init.js"></script>

    <!-- apexcharts -->
    <script src="public/assets/libs/apexcharts/apexcharts.min.js"></script>

    <!-- apexcharts init -->
    <script src="public/assets/js/pages/apexcharts.init.js"></script>

    <%- contentFor('BottomJs') %>
  </div>
</div>
